{{errors}}
<div class="row justify-content-center">
    <div class="col-12 col-sm-4">
        <h1 id="title-reg" class="mt-5 mb-5">Empieza a disfrutar de tus nuevas aventuras</h1>
        <form action="/register" method="post">
            <div class="col-xs-4 col-xs-offset-4">
                <label class="form-label">Nombre</label>
                <div class="input-group mb-2">
                    <span class="input-group-text"><i class="fa fa-user fa-fw"></i></span>
                    <input type="text" class="form-control {{#if errors.name}}is-invalid{{/if}}" name="name"
                        value="{{ user.name }}" placeholder="Pepito" />
                    <div class="invalid-feedback">{{ errors.name }}</div>
                </div>
            </div>
            <div class="col-xs-4 col-xs-offset-4">
                <label class="form-label">Email</label>
                <div class="input-group mb-2">
                    <span class="input-group-text"><i class="fa fa-envelope fa-fw"></i></span>
                    <input type="text" class="form-control {{#if errors.email}}is-invalid{{/if}}" name="email"
                        value="{{ user.email }}" placeholder="example@gmail.com" />
                    <div class="invalid-feedback">{{ errors.email }}</div>
                </div>
            </div>
            <div class="col-xs-4 col-xs-offset-4">
                <label class="form-label">Contrasena</label>
                <div class="input-group mb-2">
                    <span class="input-group-text"><i class="fa fa-lock fa-fw"></i></span>
                    <input type="password" class="form-control {{#if errors.password}}is-invalid{{/if}}" name="password"
                        placeholder="password" />
                    <div class="invalid-feedback">{{ errors.password }}</div>
                </div>
            </div>

            <div class="container mt-5">

            </div>
           
            <div class="d-grid">
                <button type="submit" class="btn btn-primary text-uppercase btn-sm">Crear cuenta</button>
                <hr>
                <a href="/login" class="btn btn-secondary btn-sm ">Iniciar sesi√≥n</a>
            </div>


        </form>
    </div>

</div>