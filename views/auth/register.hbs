<h1>REGISTER</h1>
<div class="container">
    <form action="/register" method="post">
       <div class="col-xs-4 col-xs-offset-4">
           <label class="form-label">Nombre</label>
            <div class="input-group mb-1">
                <span class="input-group-text"><i class="fa fa-user fa-fw"></i></span>
                <input type="text" class="form-control {{#if errors.name}}is-invalid{{/if}}" name="name" value="{{ user.name }}"
                    placeholder="Pepito" />
                <div class="invalid-feedback">{{ errors.name }}</div>
            </div>
        </div>
        <div class="col-xs-4 col-xs-offset-4">
            <label class="form-label">Email</label>
            <div class="input-group mb-1">
                <span class="input-group-text"><i class="fa fa-user fa-fw"></i></span>
                <input type="text" class="form-control {{#if errors.email}}is-invalid{{/if}}" name="email" value="{{ user.email }}"
                    placeholder="example@gmail.com" />
                <div class="invalid-feedback">{{ errors.email }}</div>
            </div>
        </div>
        <div class="col-xs-4 col-xs-offset-4">
            <label class="form-label">Contrasena</label>
            <div class="input-group mb-1">
                <span class="input-group-text"><i class="fa fa-user fa-fw"></i></span>
                <input type="text" class="form-control {{#if errors.password}}is-invalid{{/if}}" name="password"
                    placeholder="password" />
                <div class="invalid-feedback">{{ errors.password }}</div>
            </div>
        </div>
        
        <div class="container mt-5">
   
        </div>
          <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Check me out</label>
        </div>
        <button type="submit" class="btn btn-primary">Crear cuenta</button>
    </form>
</div>