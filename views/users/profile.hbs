<div class="container" id="profile-container">


       <div class="avatar">
              <img src="{{ user.avatarUrl}}" alt="avatar">
       </div>
       <div class="profile-info">
              <div class="profile-info-items">
                     <div class="profile-name">
                            <h2>{{ user.name }}</h2>
                     </div>

                     <div class="profile-email">
                            <small>{{ user.email}}</small>
                     </div>
              </div>
       </div>



       <hr>


       <div class="container mt-5 ">
              <h1 class="mt-5 mb-5 font-weight-bold">Tus planes favoritos</h1>
              <div class="row">
                     <div class="multiple-items">
                            {{#each user.likes as |plan|}}
                          
                                   <div class="custom-card-profile col-xl-4 col-md-4 col-sm-6 col-xs-12  mb-4 px-3">
                                          <div class="shadow-custom-card">
                                                 <div style="background-image: url('{{plan.image}}')"
                                                        class="custom-card-img-top" alt="...">
                                                 </div>
                                                 <div class="card-body custom-card-body">
                                                        <h5 class="card-title">{{ plan.title }}</h5>
                                                        <p class="card-text">peque√±a descripcion del plan</p>
                                                        <a href="/plans/{{ plan.id }}" class="btn btn-primary">VER
                                                               MAS...</a>
                                                 </div>
                                          </div>
                                   </div>
                           
                            {{/each}}
                     </div>
              </div>

       </div>
</div>